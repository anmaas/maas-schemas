{
  "$id": "http://maasglobal.com/core/personal-document.json",
  "type": "object",
  "description": "Personal document object",
  "definitions": {
    "documentType": {
      "type": "string"
    },
    "documentStatus": {
      "type": "string",
      "enum": ["PENDING", "APPROVED", "DECLINED", "EXPIRED", "RESUBMISSION_REQUESTED", "ABANDONED"]
    },
    "documentStatusPENDING": {
      "default": "PENDING",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "PENDING" }]
    },
    "documentStatusAPPROVED": {
      "default": "APPROVED",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "APPROVED" }]
    },
    "documentStatusDECLINED": {
      "default": "DECLINED",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "DECLINED" }]
    },
    "documentStatusEXPIRED": {
      "default": "EXPIRED",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "EXPIRED" }]
    },
    "documentStatusRESUBMISSION_REQUESTED": {
      "default": "RESUBMISSION_REQUESTED",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "RESUBMISSION_REQUESTED" }]
    },
    "documentStatusABANDONED": {
      "default": "ABANDONED",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "ABANDONED" }]
    },
    "partyId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "partyType": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    }
  },
  "properties": {
    "id": {
      "$ref": "http://maasglobal.com/core/components/units.json#/definitions/uuid"
    },
    "identityId": {
      "$ref": "http://maasglobal.com/core/components/units.json#/definitions/identityId"
    },
    "type": {
      "$ref": "#/definitions/documentType"
    },
    "documentNumber": {
      "type": "string"
    },
    "nameOnDocument": {
      "type": "string"
    },
    "issuingCountry": {
      "type": "string",
      "minLength": 2
    },
    "status": {
      "$ref": "#/definitions/documentStatus"
    },
    "validFrom": {
      "$ref": "http://maasglobal.com/core/components/units.json#/definitions/isoDate"
    },
    "validTo": {
      "$ref": "http://maasglobal.com/core/components/units.json#/definitions/isoDate"
    },
    "details": {
      "type": "object",
      "properties": {
        "category": {
          "type": "string"
        }
      }
    },
    "media": {
      "description": "Media documents related to user personal document.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "context": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": ["content", "context"]
      }
    },
    "kycServiceId": {
      "description": "Id of kyc service used",
      "type": "string",
      "minLength": 2
    },
    "firstName": {
      "oneOf": [
        {
          "$ref": "http://maasglobal.com/core/components/common.json#/definitions/personalName"
        },
        {
          "type": "null"
        }
      ]
    },
    "lastName": {
      "oneOf": [
        {
          "$ref": "http://maasglobal.com/core/components/common.json#/definitions/personalName"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": ["type", "documentNumber", "issuingCountry", "status", "validFrom", "validTo"]
}
